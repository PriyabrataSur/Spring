<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="credit" class="in.Basics.beans.CreditCard" />
    <bean id="debit" class="in.Basics.beans.DebitCard" primary="true"/>
    <bean id="amex" class="in.Basics.beans.AmexCard" />

    <bean id="pay" class="in.Basics.beans.PaymentService" autowire="byType">
        <constructor-arg name = "payment" ref="debit" ></constructor-arg>
    </bean>

</beans>