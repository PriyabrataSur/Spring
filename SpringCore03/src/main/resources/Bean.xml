<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="credit" class="in.Payment.beans.CreditCard"/>
    <bean id="debit" class="in.Payment.beans.DebitCard"/>
    <bean id="amex" class="in.Payment.beans.AmexCard"/>

    <bean id="payment" class="in.Payment.beans.PaymentService">
            <constructor-arg name="payment" ref="debit"> </constructor-arg>
    </bean>

</beans>